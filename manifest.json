{
  "name": "Clean Hulu",
  "version": "1.0",
  "description": "Adds automatic profanity filtering to Hulu videos that are subtitled.",
  "icons": {
    "128": "images/webmail-extension-128.png",
    "16": "images/webmail-extension-16.png"
  },
  "homepage_url": "http://jacobwg.com/projects/clean-hulu/",
  "permissions": [ "tabs", "notifications", "http://query.yahooapis.com/*" ],
  "background": {
    "page": "background.html"
  },
  "page_action": {
    "default_icon" : "icon-19.png",
    "default_title": "Click to Disable Hulu Filter"
  },
  "web_accessible_resources": [ "hulu-filter/runner/application.js"  ],
  "content_scripts" : [
    {
      "matches" : [
        "http://*.hulu.com/*",
        "https://*.hulu.com/*"
      ],
      "js" : ["scripts/app.js"],
      "run_at" : "document_idle",
      "all_frames" : false
    }
  ],
  "manifest_version": 2
}
